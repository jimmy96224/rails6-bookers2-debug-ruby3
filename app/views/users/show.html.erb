<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
        <!--<div>-->
        <!--  % if current_user.following?(@user) %>-->
        <!--    %= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-success btn-sm" %>-->
        <!--  % else %>-->
        <!--    %= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-primary btn-sm" %>-->
        <!--  % end %>-->
        <!--</div>-->
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <!--%= render 'books/index',books: @books %>-->

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <!--<th colspan="3"></th>-->
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to(book.user) do %>
                <%= image_tag book.user.get_profile_image, size:'50x50' %>
                <% end %>
              </td>
              <td><%= link_to book.title,book %></td>
              <td><%= book.body %></td>
              <td id="favorite_buttons_<%= book.id %>">
                <%= render "favorites/favorites", book: book %>
              </td>
              <td><%= link_to "コメント数: #{book.book_comments.count}", book_path(book.id) %></td>
              <td>閲覧数: <%= @book_detail.view_counts.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>





